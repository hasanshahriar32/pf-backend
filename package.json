{
  "name": "express-typescript-backend",
  "version": "1.0.0",
  "description": "A modular Express.js backend with TypeScript, Prisma, MongoDB, and JWT authentication",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && tsc-alias && copyfiles -u 2 \"src/schemas/**/*\" dist/schemas/ && copyfiles -u 1 \"public/**/*\" dist/public/",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "vercel-build": "prisma generate && tsc && tsc-alias && copyfiles -u 2 \"src/schemas/**/*\" dist/schemas/ && copyfiles -u 1 \"public/**/*\" dist/public/",
    "postbuild": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio --port 10000",
    "erd:generate": "prisma generate",
    "docs:erd": "npm run erd:generate"
  },
  "keywords": [
    "express",
    "typescript",
    "prisma",
    "mongodb",
    "jwt",
    "modular"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.4.2",
    "@types/swagger-ui-express": "^4.1.8",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.10.1",
    "@types/bcryptjs": "^2.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^20.6.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "copyfiles": "^2.4.1",
    "prisma": "^5.4.2",
    "prisma-erd-generator": "^2.1.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2"
  }
}
